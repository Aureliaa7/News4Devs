<div class="book-container">
    <div class="media-container">
        <img src="@BookDto.image" alt="image" />
    </div>
    <div class="book-details-container">
        <a href="@BookDto.url" target="_blank"><h3>@BookDto.title</h3></a>
        <h5>@BookDto.subtitle</h5>
        <h6>ISBN 13: @BookDto.isbn13</h6>
        <h6>Price: @BookDto.price</h6>
    </div>
</div>