<div class="people-container">
    @for (int i = 0; i < Users.Count; i+=2)
    {
        <div class="row">
            <div class="col-5"> <Person User="Users[i]"></Person></div>
            @if (i+1 < Users.Count)
            {
                <div class="col-5"> <Person User="Users[i+1]"></Person></div>
            }  
        </div>
    }
    
    <LoadMoreButton 
        IsLoadMoreButtonVisible="isLoadMoreButtonVisible" 
        OnLoadMore="LoadMore">
    </LoadMoreButton>
</div>