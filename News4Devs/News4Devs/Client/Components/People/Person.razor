<div class="list-group-item list-group-item-action flex-column align-items-start contact-list-item">
    <div class="user-image">
        <img src="@imageSrc" alt="img"/>
    </div>
    <div class="user-name">
        <a href="/chat/@User.Id">
            @if (User?.FirstName != null)
            {
                <span> @User.FirstName @User.LastName </span>
            }
            else
            {
                @User.Email
            }
        </a>
    </div>
</div>