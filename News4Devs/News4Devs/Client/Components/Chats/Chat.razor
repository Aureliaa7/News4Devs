@page "/chat/{id}"
@attribute [Authorize]


<div class="chat-container">
    <div class="username"><h4>@toUser?.FirstName @toUser?.LastName</h4></div>
    <div id="messages-container" @onscroll="OnScroll">
        @if (isLoading)
        {
            <LoadingSpinner />
        }
        else
        {
            @foreach (var message in chatMessages)
            {
                @if (message.FromUserId.ToString() == currentUserId)
                {
                    <div class="row sent-container">
                        <div class="col-md-10 col-xs-10">
                            <div class="message-container sent-message">
                                <p>@message.Message</p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row received-container">
                        <div class="col-md-10 col-xs-10">
                            <div class="message-container received-message">
                                <p>@message.Message</p>
                            </div>
                        </div>
                    </div>
                }
            }
        }
        </div>
    <div class="col-md-10 new-message-container">
            <input @bind="messageText" size="50" id="message-box" @onkeydown="OnKeyDown" class="col-md-9 message-box-style"/>
            <button @onclick="Send" disabled="@(!IsConnected)" class="message-box-style">
                <i class="far fa-paper-plane"></i>
            </button>
    </div>
</div>