<div class="article-container">
    <div class="media-container">
        <img src="@ArticleDto.social_image" alt="image" />
    </div>
    <div class="article-details-container">
        <a href="@ArticleDto.url" target="_blank"><h3>@ArticleDto.title</h3></a>
        <h5>@ArticleDto.user.name</h5>
        <h6>@ArticleDto.readable_publish_date</h6>
        <h6>Reading time: @ArticleDto.reading_time_minutes minutes</h6>
        <h6>Tags: @ArticleDto.tags</h6>
        <div class="article-summary">
            <p>@ArticleDto.description</p>
        </div>
    </div>
</div>