<div class="article-container">
     <div class="media-container">
         <img src="@ArticleDto.media" alt="image" />
     </div>
     <div class="article-details-container">
         <a href="@ArticleDto.link" target="_blank"><h3>@ArticleDto.title</h3></a>
         <h5>@ArticleDto.author</h5>
         <h6>@ArticleDto.published_date</h6>
         <div class="article-summary">
             <p>@ArticleDto.summary</p>

         </div>
     </div>
</div>